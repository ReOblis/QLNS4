@model IEnumerable<QLNS.Models.LuongNhanVien>
@using QLNS.Models;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaNV)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.LCBan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNV)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.LCBan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaLuong">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaLuong">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaLuong">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
